const express = require('express');
const movies = require('./movies');
const app = express()
 
app.get('/', function (req, res) {
  res.send('Hello World')
})
 
app.get('/movies', (req, res) => {
	let result = {};
	if (!req.query.filter) {
		res.json(movies);
	}
	try{
		 result = movies.filter(m => m.name.toLowerCase().indexOf(req.query.filter.toLowerCase()) > -1);
	} catch (e) {
		console.log("err: ", e);
	}
	res.json(result);
})


app.listen(3000)








